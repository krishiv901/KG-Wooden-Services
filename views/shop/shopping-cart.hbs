    
<div class="fuller">
    {{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item">
                    <span class="badge">{{ this.qty }}</span>
                    <strong>{{ this.item.title }}</strong>
                    <span class="label label-primary"><i class="fas fa-rupee-sign"></i> {{ this.price }}</span>
                    <div class="btn-group">
                        {{!-- <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action
                            <span class="caret"></span></button> --}}
                        {{!-- <ul class="dropdown-menu">
                            <li><a href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                            <li><a href="/remove/{{this.item._id}}">Remove All</a></li>
                        </ul> --}}
                        <button type="button" class="btn btn-light"><a href="/reduce/{{this.item._id}}">Decrement  <i class="fas fa-arrow-down"></i></a></button>
                        <button type="button" class="btn btn-light"><a href="/remove/{{this.item._id}}">Remove All  <i class="fas fa-trash"></i></a></button>
                           
                        
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: <i class="fas fa-rupee-sign"></i> {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>Oops!! Your cart is empty</h2>
        </div>
    </div>
    {{/if}}
</div>